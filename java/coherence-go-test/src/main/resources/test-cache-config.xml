<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>*</cache-name>
      <scheme-name>distributed-scheme</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>canary</cache-name>
      <scheme-name>canary-scheme</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>preload</cache-name>
      <scheme-name>simple-cache-loader</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>touch</cache-name>
      <scheme-name>touch-scheme</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <topic-scheme-mapping>
    <topic-mapping>
      <topic-name>*</topic-name>
      <scheme-name>topic-scheme</scheme-name>
    </topic-mapping>
  </topic-scheme-mapping>

  <caching-schemes>
    <distributed-scheme>
      <scheme-name>distributed-scheme</scheme-name>
      <service-name>PartitionedCache</service-name>
      <local-storage system-property="coherence.distributed.localstorage">true
      </local-storage>
      <partition-count>31</partition-count>
      <backing-map-scheme>
        <local-scheme>
          <unit-calculator>BINARY</unit-calculator>
        </local-scheme>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>touch-scheme</scheme-name>
      <service-name>PartitionedCacheTouch</service-name>
      <local-storage system-property="coherence.distributed.localstorage">true
      </local-storage>
      <partition-count>31</partition-count>
      <backing-map-scheme>
        <local-scheme>
          <unit-calculator>BINARY</unit-calculator>
          <expiry-delay>10s</expiry-delay>
        </local-scheme>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>canary-scheme</scheme-name>
      <service-name>CanaryService</service-name>
      <local-storage system-property="coherence.distributed.localstorage">true
      </local-storage>
      <partition-count>31</partition-count>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>simple-cache-loader</scheme-name>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>com.oracle.coherence.go.testing.SimpleCacheLoader</class-name>
              <init-params>
                <init-param>
                  <param-type>java.lang.String</param-type>
                  <param-value>{cache-name}</param-value>
                </init-param>
              </init-params>
            </class-scheme>
          </cachestore-scheme>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
    </distributed-scheme>

    <paged-topic-scheme>
      <scheme-name>topic-scheme</scheme-name>
      <service-name>${coherence.service.name Partitioned}Topic</service-name>
      <local-storage system-property="coherence.distributed.localstorage">true</local-storage>
      <partition-count system-property="coherence.distributed.partitions">${coherence.distributed.partitioncount 257}</partition-count>
      <autostart system-property="coherence.topic.enabled">true</autostart>
      <channel-count system-property="coherence.topic.channel.count"/>
      <high-units>{topic-high-units-bytes 0B}</high-units>
      <reconnect-wait system-property="coherence.topic.reconnect.wait"/>
      <reconnect-timeout system-property="coherence.topic.reconnect.timeout"/>
      <reconnect-retry system-property="coherence.topic.reconnect.retry"/>
    </paged-topic-scheme>
  </caching-schemes>
</cache-config>
